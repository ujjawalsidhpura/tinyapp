<!-- Standard Header element for all pages for tinyApp -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    
    <!-- TO check if user is present, if present welcome or else register -->

    <% if(!username) { %>
      <!-- Login Registration Form -->
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
        
          <input class="form-control font-weight-bold" type="text" name="username" placeholder="Enter a username" style="width: 180px; margin: 1em">
  
          <button type="submit" class="btn btn-secondary font-weight-bold">
            Sign In
          </button>
        </div>
      </form>
      <% } else { %>
        <!-- LogOut form -->
        <form class="form-inline" action="/logout" method="POST" name="logout">
          <div class="form-group mb-2">
            <label class="form-control font-weight-bold" for="logout"> Welcome <%= username %>
            </label>
    
            <button type="submit" class="btn btn-warning font-weight-bold">
             Log Out
            </button>
          </div>
        
        <% } %>
  </nav>
</header>